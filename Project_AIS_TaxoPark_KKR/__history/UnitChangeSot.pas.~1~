{$R *.dfm}
uses UnitUser;
procedure TFormChangeS.PanelChange_KKRClick(Sender: TObject);
begin
  if FormUser.UniQuerySot.Modified then FormUser.UniQuerySot.Post;
  ShowMessage('Информация изменена!');
     FormChangeS.Close;
